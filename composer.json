{
    "name": "mideal/idea",
    "description": "PHP lite Framework.",
    "keywords": ["framework", "php"],
    "license": "MIT",
    "homepage": "https://mideal.ru",
    "support": {
        "issues": "https://github.com/mideal/idea/issues",
        "source": "https://github.com/mideal/idea"
    },
    "authors": [
        {
            "name": "Denis Mitrofanov",
            "email": "midealf@gmail.com"
        }
    ],    
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.8",
        "monolog/monolog": "^3.5",
        "symfony/console": "^7.0",
        "vlucas/phpdotenv": "^5.6",
        "symfony/http-foundation": "^7.0",
        "symfony/routing": "^7.0",
        "symfony/finder": "^7.0",
        "filp/whoops": "^2.15"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "symfony/var-dumper": "^7.0"
    },
    "provide": {
        "psr/container-implementation": "1.1|2.0"
    },
    "autoload": {
        "psr-4": {
            "Idea\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Idea\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}